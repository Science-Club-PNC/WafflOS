# Use WxWidgets as GUI
#config_interface: wx
#display_library: wx
# This can be buggy. You can uncomment this and use command line debugging instead.

# Mount the CD
boot: cdrom
ata0: enabled=1, ioaddr1=0x1f0, ioaddr2=0x3f0, irq=14
ata0-master: type=cdrom, path="wafflos.iso", status=inserted

# To change CPU, BIOS, RAM, add mouse/keyboard, see the default config (.bochsrc in http://sourceforge.net/projects/bochs/files/bochs/2.6.7/bochs-2.6.7.tar.gz), or the online docs: http://bochs.sourceforge.net/doc/docbook/user/bochsrc.html
